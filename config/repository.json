{
    "repos": [
        {
            "name": "Novel Fire",
            "id": "1",
            "repoUrl": "https://novelfire.net",
            "repoType": "novel",
            "repoChapterType": {
                "type": "iterative",
                "path": "/book/[bookId]/chapters"
            },
            "repoIcon": "https://novelfire.net/logo.svg?v=2",
            "repoBookUrl": "https://novelfire.net/book/${bookName}",
            "repoAllChaptersUrl": "https://novelfire.net/book/${bookName}/chapters",
            "repoSearch": {
                "type": "http",
                "method": "GET",
                "path": "/ajax/searchLive?inputContent=[text]",
                "jsonPath": "$.html",
                "selector": ".novel-list .novel-item",
                "page": "search",
                "bookId": {
                    "type": "attribute",
                    "selector": "a",
                    "attribute": "href",
                    "regex": "book/(.*)"
                },
                "rating": {
                    "type": "attribute",
                    "selector": ".novel-stats .info-rating",
                    "attribute": "data-rating"
                },
                "bookLink": {
                    "type": "text",
                    "selector": "a",    
                    "attribute": "href"
                },
                "bookImage": {
                    "type": "text",
                    "selector": ".novel-cover img",
                    "attribute": "data-src"
                },
                "title": {
                    "type": "text",
                    "selector": ".novel-title"
                }
            },
            "bookImageSelector": {
                "type": "text",
                "selector": ".novel-header .fixed-img img",
                "attribute": "src",
                "page": "home"
            },
            "homeSelector": {
                "type": "text",
                "path": "/book/[bookId]",
                "page": "home",
                "latestChapterSelector": {
                    "type": "text",
                    "selector": ".novel-info .header-stats span strong"
                },
                "authorSelector": {
                    "type": "text",
                    "selector": ".novel-info .author",
                    "regex": "Author: (.*)"
                },
                "summarySelector": {
                    "type": "text",
                    "selector": ".summary .content"
                }
            },
            "chapterSelector": {
                "path": "/book/[bookId]/chapter-[chapterId]",
                "page": "chapter",
                "content": {
                    "type": "html",
                    "selector": "#chapter-container #content",
                    "filters": [
                        {
                            "type": "css",
                            "selector": ".box-notification"
                        },
                        {
                            "type": "css",
                            "selector": "h4"
                        }
                    ]
                }
            },
            "listSelector": {
                "type": "text",
                "path": "/genre-all/sort-new/status-all/all-novel",
                "selector": "#list-novel .novel-item",
                "page": "search",
                "bookId": {
                    "type": "attribute",
                    "selector": "a",
                    "attribute": "href",
                    "regex": "book/(.*)"
                },
                "bookLink": {
                    "type": "text",
                    "selector": "a",
                    "attribute": "href"
                },
                "bookImage": {
                    "type": "text",
                    "selector": ".novel-cover img",
                    "attribute": "data-src"
                },
                "title": {
                    "type": "attribute",
                    "selector": "a",
                    "attribute": "title"
                }
            }
        }
    ]
}